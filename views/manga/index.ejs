<%- include('../partials/header') %>
<h2><b>Manga Collection</b></h2>
<a href="/manga/new" class="btn collectionBtn" style="background-color: #cfb53b;" role="button"
  ><b>ADD MANGA</b></a
>
<hr>
<% if(manga.length > 0) { %> <% manga.forEach(manga => { %>
<div class="card" style="width: 18rem">
  <img src="<%= manga.imageUrl %>" class="card-img-top" alt="..." />
  <div class="card-body">
    <h5 class="card-title"><%= manga.title %></h5>
    <p class="card-text">Status: <%= manga.status %></p>
    <p class="card-text">Average Score: <%= manga.averageRating %></p>
    <a href="/manga/<%= manga.slug %>" class="btn btn-primary">Details</a>
  </div>
</div>
<% }) %> <% } else { %>
<h3>There are no manga in your collection</h3>
<img
  class="collectionImg"
  src="https://i.ytimg.com/vi/Fo4_HggMSYI/maxresdefault.jpg"
  alt=""
/>
<% } %> <%- include('../partials/footer') %>
