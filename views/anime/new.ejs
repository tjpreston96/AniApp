<%- include('../partials/header') %>

<form action="/anime/search" method="POST">
    <div class="form-row">
      <div class="col-md-4">
        <input type="text" class="form-control" name="query" placeholder="Search for anime...">
      </div>
    </div>
    <button type="submit" class="btn btn-info">Search</button>
  </form>

<!-- results go below -->
<% if (results) { %>
    <% results.forEach(anime => { %>
        <div class="card" style="width: 18rem;">
            <img src="<%= anime.cover_image %>" class="card-img-top" alt="...">
        </div>
    <% }) %>
<% } %> 

<%- include('../partials/footer') %>
